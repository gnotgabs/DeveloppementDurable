{% extends "ArticleDevBundle::adminLayout.html.twig" %}

    {# IMPORTATION DE LA MACRO CHARGEE DE LA CREATION DES MENUS #}
{% import "ArticleDevBundle::menu.html.twig" as macroMenus %}


{% block arianne %}

    {{ parent() }}
 
    <li>
        <a href="{{ path('article_dev_delArticle', {'id': category.id}) }}" title="Supprimer la catégorie: {{ category.labelCategory }}">
            Suppression Catégories
        </a><span class="end">&nbsp;</span>
    </li>
{% endblock %}


{% block menu %}
    {{ macroMenus.dynamicMenu(menus) }}
{% endblock %}

{% block body %}
   {{ parent() }}
    <div class="well">
        <p class="title">Etes-vous certain de vouloir supprimer la catégorie  <span class="editSup">« {{category.labelCategory}} » ?</span></p>
        <form action="{{ path('article_dev_delCategory', {'id': category.id}) }}" method='post' {{ form_enctype(form) }} class="formSup"> 
            {{ form_errors(form) }}
            
            <a href="{{ path('article_dev_showCategories') }}" class='a-back'>
              <i class="btn-back"></i>
              Retour aux catégories
            </a>
            
            <input type="submit" value="Supprimer" class="btn-danger" />
            {{ form_rest(form) }}
        </form>
    </div>
{% endblock %}