{% macro voletGauche(articles, lMenus) %}

    {% if articles|length != 0%}
        {% for article in articles|slice(0, 1) %}
            <div id="question">
                <p class="title">Exercez vous</p>
                <a href="{{ path('article_dev_question', {'idSC': article.subCategory.id,'idQ': article.subCategory.id}) }}" class="aQuiz">
                    Acc√©dez aux questions
                </a>
            </div>
        {% endfor %}
    {% endif %}
    <div id="autres">
        {% for lmenu in lMenus %}
            <p class="title">{{ lmenu.title }}</p>
            {% for elt in lmenu.lMenuElts %}
                <a href="{{ elt.linkElt }}" class="aQuiz" target='_blank'>
                    >&nbsp;&nbsp;{{ elt.labelElt}}
                </a>
            <br>
            {% endfor %}
        {% endfor %}
    </div>
{% endmacro %}